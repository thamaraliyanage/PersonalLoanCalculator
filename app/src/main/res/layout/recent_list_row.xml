<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorSurfaceOnSurface"
    android:layout_marginTop="16dp"
    app:contentPadding="8dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingTop="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="35sp"
            android:text="LKR 10,000,000"
            android:textAppearance="@style/TextAppearance.MatAppTypographyStyles.Headline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewLoanSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="at 10.05% for 100 Years"
            android:textAppearance="@style/TextAppearance.MatAppTypographyStyles.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLoanAmount" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:divider="@drawable/divider_card_view"
            android:showDividers="middle|beginning|end"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLoanSub">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/labelMonthlyRepayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/monthly_repayment"
                    android:textAppearance="@style/TextAppearance.MatAppTypographyStyles.Caption" />

                <TextView
                    android:id="@+id/textViewMonthlyRepayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:text="LKR 5,436.00"
                    android:textAppearance="@style/TextAppearance.MatAppTypographyStyles.Body1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/labelTotalAmountPayable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/total_amount_payable"
                    android:textAppearance="@style/TextAppearance.MatAppTypographyStyles.Caption" />

                <TextView
                    android:id="@+id/textViewTotalAmountPayable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="end"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:text="LKR 10,562,050.00"
                    android:textAppearance="@style/TextAppearance.MatAppTypographyStyles.Body1" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>